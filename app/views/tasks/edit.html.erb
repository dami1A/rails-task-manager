<h1>Edit task</h1>
<br>
<br>
<br>
<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div>
    <%= f.submit 'Update', class: 'btn btn-success' %>
  </div>
<% end %>
<br class="underlined">
<%= link_to '<i class="fa fa-chevron-circle-left"></i> back'.html_safe, task_path %>

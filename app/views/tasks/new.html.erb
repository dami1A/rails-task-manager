<h1>Add a task</h1>
<br>
<br>
<br>
<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div>
    <%= f.submit 'create', class: 'btn btn-primary' %>
  </div>
<% end %>
<br class="underlined">
<i class="fa fa-chevron-circle-left"><%= link_to 'back', tasks_path %></i>
